<html>

<head>
    <title>Voting App</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <link href="/public/css/main.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div style="margin:100px;">
        <nav class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <a class="navbar-brand" href="/">Polls App</a>
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="/poll/polls">Home</a>
                    </li>
                    <li>
                        <a href="/about">About</a>
                    </li>
                    <li>
                        <a href="/poll/create-poll">Create Poll</a>
                    </li>
                    <li>
                        <a href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="jumbotron" style="padding:40px;">
            <h2>We love polls!</h2>
            <p>This is the poll you are looking for!</p>
            <h3><%= poll.name %></h3>
            <br>
            <br>
            <table>
                <thead>
                    <th>Option</th>
                    <th>Votes</th>
                </thead>
                <tr>
                    <td>
                        <%= poll.options.option1 %>
                    </td>
                    <td class="voteDisplay">
                        <%= poll.votes.option1 %>
                    </td>
                    <td>
                        <button id='option1' class="voteButton">Vote</button>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= poll.options.option2 %>
                    </td>
                    <td class="voteDisplay">
                        <%= poll.votes.option2 %>
                    </td>
                    <td>
                        <button id='option2' class="voteButton">Vote</button>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= poll.options.option3 %>
                    </td>
                    <td class="voteDisplay">
                        <%= poll.votes.option3 %>
                    </td>
                    <td>
                        <button id='option3' class="voteButton">Vote</button>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= poll.options.option4 %>
                    </td>
                    <td class="voteDisplay">
                        <%= poll.votes.option4 %>
                    </td>
                    <td>
                        <button id='option4' class="voteButton">Vote</button>
                    </td>
                </tr>
            </table>
            <div>
                <!-- Button to tweet    -->
                <a class="twitter-share-button" href="#" role="button"><img src="https://cdn3.iconfinder.com/data/icons/material-design-social-icons/152/Twitter_icon-128.png" alt="twitter" height="34" width="34"></a>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <br>
            <p class="text-muted">&copy; 2017 <a href="https://github.com/DrWilliamsSteven" target="_blank">Steven Williams</a> </p>
        </div>
    </footer>
    <script type="text/javascript" src="../../common/ajax-functions.js"></script>
    <script type="text/javascript" src="../../controllers/pollController.client.js"></script>
</body>

</html>
